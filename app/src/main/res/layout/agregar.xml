<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agregar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sofia.gastoshormiga.agregar"
    android:background="@android:color/background_light">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Nuevo gasto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_marginLeft="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Titulo del gasto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nombre"
                android:background="@android:color/background_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:layout_below="@+id/textView17"
                android:layout_alignStart="@+id/textView17"/>

            <TextView
                android:text="DescripciÃ³n general del gasto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/descripcion"
                android:layout_height="200dp"
                android:background="@android:color/background_light"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_below="@+id/gasto"
                android:layout_alignStart="@+id/gasto"
                android:layout_alignEnd="@+id/gasto"
                android:layout_alignParentBottom="true" />

            <TextView
                android:text="Cantidad gastada en pesos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/gasto"
                android:layout_below="@+id/nombre"
                android:layout_alignStart="@+id/nombre"
                android:background="@android:color/background_light"
                android:layout_alignEnd="@+id/nombre"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="regresar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/breg"
                    android:layout_weight="1"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorPrimary" />

                <Button
                    android:text="agregar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/ba"
                    android:layout_weight="1"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/holo_blue_bright" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
